    }
  },
  "webhooks": {
    "order.status.changed": {
      "post": {
        "summary": "Order status changed webhook",
        "description": "Sent when an order transitions to a new status.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OrderStatusEvent"
              },
              "examples": {
                "paid": {
                  "value": {
                    "event": "order.status.changed",
                    "occurredAt": "2026-02-14T09:30:00Z",
                    "data": {
                      "orderId": "ord_9100",
                      "status": "paid"
