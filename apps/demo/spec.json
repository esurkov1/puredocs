    "/diagnostics/echo": {
      "trace": {
        "tags": ["Diagnostics"],
        "summary": "TRACE request echo",
        "description": "Echo endpoint used for protocol diagnostics. Usually disabled in production.",
        "security": [],
        "responses": {
          "200": {
            "description": "Trace response",
            "content": {
              "message/http": {
                "schema": {
                  "type": "string"
                },
                "examples": {
                  "trace": {
                    "value": "TRACE /diagnostics/echo HTTP/1.1\\nHost: api.sandbox.puredocs.dev"
                  }
                }
              }
            }
          }
        }
